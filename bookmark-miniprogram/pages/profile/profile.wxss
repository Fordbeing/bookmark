/* pages/profile/profile.wxss */

.profile-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #fafafa;
}

/* 用户卡片 - 固定比例 */
.user-card {
  flex-shrink: 0;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
  padding: 60rpx 40rpx 80rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  backdrop-filter: blur(10px);
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  min-width: 0;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.email {
  display: block;
  font-size: 26rpx;
  color: rgba(255,255,255,0.7);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 统计卡片 */
.stats-card {
  flex-shrink: 0;
  display: flex;
  margin: -40rpx 24rpx 24rpx;
  background: #fff;
  border-radius: 24rpx;
  position: relative;
  z-index: 10;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.08);
  padding: 8rpx 0;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
}

.stat-value {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #a1a1aa;
}

.stat-divider {
  width: 1rpx;
  background: linear-gradient(180deg, transparent 0%, #e4e4e7 50%, transparent 100%);
  margin: 20rpx 0;
}

/* 菜单列表 - 弹性填充 */
.menu-list {
  flex: 1;
  margin: 0 24rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f4f4f5;
  transition: all 0.15s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  opacity: 0.7;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #f0f4ff 0%, #e0e7ff 100%);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #27272a;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #d4d4d8;
}

.menu-value {
  font-size: 26rpx;
  color: #a1a1aa;
  margin-right: 8rpx;
}

/* 退出登录 */
.logout-section {
  flex-shrink: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 2rpx solid #fecaca;
  color: #ef4444;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 20rpx;
  transition: all 0.15s;
}

.logout-btn:active {
  background: #fef2f2;
  transform: scale(0.98);
}

/* 页脚 */
.footer {
  flex-shrink: 0;
  text-align: center;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  color: #d4d4d8;
  font-size: 24rpx;
}
