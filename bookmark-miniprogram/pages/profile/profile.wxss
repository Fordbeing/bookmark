/* pages/profile/profile.wxss */

.profile-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.user-info {
  flex: 1;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.email {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 统计卡片 */
.stats-card {
  display: flex;
  margin: -40rpx 24rpx 24rpx;
  position: relative;
  z-index: 10;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #2563eb;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
}

.stat-divider {
  width: 1rpx;
  background-color: #e5e7eb;
  margin: 16rpx 0;
}

/* 菜单列表 */
.menu-list {
  margin: 0 24rpx 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #e5e7eb;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.menu-arrow {
  font-size: 32rpx;
  color: #9ca3af;
}

.menu-value {
  font-size: 26rpx;
  color: #9ca3af;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 24rpx;
}

.btn {
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
}

.btn-danger-outline {
  background-color: transparent;
  border: 2rpx solid #ef4444;
  color: #ef4444;
}

.btn-block {
  width: 100%;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 40rpx;
  color: #9ca3af;
  font-size: 24rpx;
}

/* 通用卡片 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
