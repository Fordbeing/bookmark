/* pages/trash/trash.wxss */

.trash-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #fef2f2 0%, #fafafa 20%);
}

/* 固定标题栏 */
.header-bar {
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, #f87171 0%, #ef4444 50%, #dc2626 100%);
}

.header-bar .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.clear-btn {
  padding: 14rpx 24rpx;
  background: rgba(255,255,255,0.2);
  color: #fff;
  font-size: 24rpx;
  border-radius: 20rpx;
}

/* 书签列表 - 弹性填充 */
.bookmark-list {
  flex: 1;
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 滑动容器 */
.swipe-container {
  position: relative;
  overflow: hidden;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
}

.swipe-content {
  position: relative;
  z-index: 1;
  transition: transform 0.15s ease-out;
}

.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
}

.action-restore, .action-delete {
  width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.action-restore {
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
}

.action-delete {
  background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
}

/* 书签卡片 */
.trash-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.card-info {
  flex: 1;
  min-width: 0;
}

.card-icon {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #a1a1aa 0%, #71717a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.card-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #71717a;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-url {
  display: block;
  font-size: 22rpx;
  color: #a1a1aa;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #a1a1aa;
}

.empty-state .icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-state .text {
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #a1a1aa;
  font-size: 28rpx;
}
