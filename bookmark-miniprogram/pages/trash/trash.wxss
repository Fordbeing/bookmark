/* pages/trash/trash.wxss */

.trash-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 标题栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.header-bar .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 书签列表 */
.bookmark-list {
  height: calc(100vh - 200rpx - env(safe-area-inset-bottom));
}

/* 书签卡片 */
.trash-card {
  margin-bottom: 20rpx;
  opacity: 0.9;
  transition: all 0.15s ease;
}

.trash-card-hover {
  background-color: #f9fafb;
}

.trash-card:active {
  transform: scale(0.99);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 14rpx;
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.card-title-wrapper {
  flex: 1;
  min-width: 0;
}

.card-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 6rpx;
}

.card-url {
  display: block;
  font-size: 22rpx;
  color: #9ca3af;
}

.card-desc {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.card-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #e5e7eb;
}

.card-actions .btn {
  flex: 1;
}

/* 通用样式 */
.btn {
  padding: 18rpx;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  transition: all 0.15s ease;
}

.btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-primary {
  background-color: #2563eb;
  color: #ffffff;
}

.btn-success {
  background-color: #22c55e;
  color: #ffffff;
}

.btn-danger {
  background-color: #ef4444;
  color: #ffffff;
}

.btn-danger-outline {
  background-color: transparent;
  border: 2rpx solid #ef4444;
  color: #ef4444;
}

.btn-sm {
  padding: 14rpx 24rpx;
  font-size: 24rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #9ca3af;
}

.empty-state .icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-state .text {
  font-size: 28rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #9ca3af;
}

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
