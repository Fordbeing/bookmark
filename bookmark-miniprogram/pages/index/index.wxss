/* pages/index/index.wxss */

.index-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

/* 搜索栏 */
.search-bar {
  padding: 24rpx;
  background-color: #2563eb;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-icon {
  font-size: 24rpx;
  color: #9ca3af;
  padding: 8rpx;
}

/* 快速添加 */
.quick-add {
  margin: 24rpx;
  margin-bottom: 0;
}

.url-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.quick-add-btns {
  display: flex;
  gap: 16rpx;
}

.quick-add-btns .btn {
  flex: 1;
}

/* 分类筛选 */
.filter-tabs {
  display: flex;
  white-space: nowrap;
  padding: 20rpx 24rpx;
  background-color: #ffffff;
  margin-top: 16rpx;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 28rpx;
  margin-right: 16rpx;
  background-color: #f3f4f6;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #6b7280;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.filter-tab:active {
  transform: scale(0.96);
  opacity: 0.85;
}

.filter-tab.active {
  background-color: #2563eb;
  color: #ffffff;
}

.filter-tab .count {
  font-size: 22rpx;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.filter-tab.active .count {
  background-color: rgba(255, 255, 255, 0.2);
}

.filter-tab-hover {
  background-color: #e5e7eb;
}

/* 标题栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
}

.header-bar .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.count-badge {
  font-size: 24rpx;
  color: #6b7280;
  background-color: #e5e7eb;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

/* 书签列表 */
.bookmark-list {
  height: calc(100vh - 520rpx - env(safe-area-inset-bottom));
  padding: 0 24rpx;
  padding-bottom: 20rpx;
}

/* 书签卡片 */
.bookmark-card {
  margin-bottom: 20rpx;
  transition: all 0.15s ease;
}

.bookmark-card-hover {
  background-color: #f9fafb;
}

.bookmark-card:active {
  transform: scale(0.99);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.card-title-wrapper {
  flex: 1;
  min-width: 0;
}

.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.card-url {
  display: block;
  font-size: 22rpx;
  color: #9ca3af;
}

.favorite-star {
  font-size: 32rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #e5e7eb;
}

.card-meta {
  display: flex;
  gap: 20rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #9ca3af;
}

.card-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  padding: 0;
  margin: 0;
  border: none;
  background-color: #f3f4f6;
  border-radius: 12rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s ease;
}

.action-btn:active {
  background-color: #e5e7eb;
  transform: scale(0.92);
}

.action-btn::after {
  border: none;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: calc(180rpx + env(safe-area-inset-bottom));
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.4);
  z-index: 100;
  transition: all 0.2s ease;
}

.fab:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.fab text {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #9ca3af;
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-state .text {
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

/* ========== 通知功能样式 ========== */

/* 通知按钮 */
.notification-btn {
  position: relative;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.notification-icon {
  font-size: 36rpx;
}

.notification-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: #ef4444;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 通知弹窗 */
.notification-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.notification-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.notification-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideIn 0.25s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -45%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}

/* 通知头部 */
.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
  color: #ffffff;
}

.notification-title {
  font-size: 32rpx;
  font-weight: 600;
}

.notification-mark-read {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
}

/* 通知列表 */
.notification-list {
  max-height: 500rpx;
}

.notification-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #9ca3af;
}

.notification-empty .empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.notification-empty .empty-text {
  font-size: 28rpx;
}

/* 通知项 */
.notification-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.2s ease;
}

.notification-item.unread {
  background-color: #eff6ff;
}

.notification-item:active {
  background-color: #f9fafb;
}

.item-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.item-desc {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-time {
  display: block;
  font-size: 22rpx;
  color: #9ca3af;
}

.item-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #3b82f6;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 8rpx;
}

/* 通知底部 */
.notification-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
  background-color: #f9fafb;
  border-top: 1rpx solid #e5e7eb;
  color: #6b7280;
  font-size: 28rpx;
}

.notification-footer:active {
  background-color: #f3f4f6;
}
