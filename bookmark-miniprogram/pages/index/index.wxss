/* pages/index/index.wxss */

.index-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding-bottom: 160rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 24rpx;
  background-color: #2563eb;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-icon {
  font-size: 24rpx;
  color: #9ca3af;
  padding: 8rpx;
}

/* 快速添加 */
.quick-add {
  margin: 24rpx;
  margin-bottom: 0;
}

.url-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.quick-add-btns {
  display: flex;
  gap: 16rpx;
}

.quick-add-btns .btn {
  flex: 1;
}

/* 分类筛选 */
.filter-tabs {
  display: flex;
  white-space: nowrap;
  padding: 20rpx 24rpx;
  background-color: #ffffff;
  margin-top: 16rpx;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background-color: #f3f4f6;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #6b7280;
  flex-shrink: 0;
}

.filter-tab.active {
  background-color: #2563eb;
  color: #ffffff;
}

.filter-tab .count {
  font-size: 22rpx;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.filter-tab.active .count {
  background-color: rgba(255, 255, 255, 0.2);
}

/* 标题栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
}

.header-bar .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.count-badge {
  font-size: 24rpx;
  color: #6b7280;
  background-color: #e5e7eb;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

/* 书签列表 */
.bookmark-list {
  height: calc(100vh - 500rpx);
  padding: 0 24rpx;
}

/* 书签卡片 */
.bookmark-card {
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.card-title-wrapper {
  flex: 1;
  min-width: 0;
}

.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.card-url {
  display: block;
  font-size: 22rpx;
  color: #9ca3af;
}

.favorite-star {
  font-size: 32rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #e5e7eb;
}

.card-meta {
  display: flex;
  gap: 20rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #9ca3af;
}

.card-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  margin: 0;
  border: none;
  background-color: #f3f4f6;
  border-radius: 12rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.4);
  z-index: 100;
}

.fab text {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #9ca3af;
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-state .text {
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #9ca3af;
  font-size: 28rpx;
}
