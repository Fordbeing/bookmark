/* pages/index/index.wxss */

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #fafafa 30%);
}

/* 搜索栏 - 固定高度 */
.search-section {
  flex-shrink: 0;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
  padding: 24rpx 24rpx 32rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.95);
  border-radius: 28rpx;
  padding: 0 24rpx;
  height: 80rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  opacity: 0.4;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 80rpx;
}

.clear-btn {
  font-size: 24rpx;
  color: #999;
  padding: 12rpx;
}

/* 快速添加 - 固定高度 */
.quick-add-section {
  flex-shrink: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background: #fff;
  margin: -16rpx 20rpx 0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  position: relative;
  z-index: 10;
}

.url-input {
  flex: 1;
  height: 76rpx;
  padding: 0 24rpx;
  background: #f4f4f5;
  border-radius: 16rpx;
  font-size: 26rpx;
  border: 2rpx solid transparent;
}

.url-input:focus {
  border-color: #6366f1;
  background: #fff;
}

.add-btn {
  width: 120rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 16rpx;
  padding: 0;
  margin: 0;
  font-weight: 500;
  box-shadow: 0 6rpx 16rpx rgba(99,102,241,0.3);
}

.add-btn::after {
  border: none;
}

/* 分类标签 - 固定高度 */
.category-tabs {
  flex-shrink: 0;
  white-space: nowrap;
  padding: 20rpx 24rpx;
}

.tab {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 28rpx;
  margin-right: 16rpx;
  background: #fff;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #52525b;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  transition: all 0.2s;
}

.tab.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(99,102,241,0.3);
}

/* 书签列表 - 弹性填充剩余空间 */
.bookmark-list {
  flex: 1;
  padding: 0 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 滑动容器 */
.swipe-container {
  position: relative;
  overflow: hidden;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
}

.swipe-content {
  position: relative;
  z-index: 1;
  transition: transform 0.15s ease-out;
}

.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
}

.action-edit, .action-delete {
  width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.action-edit {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.action-delete {
  background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
}

/* 书签项 */
.bookmark-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.item-icon {
  width: 76rpx;
  height: 76rpx;
  background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(99,102,241,0.25);
}

.item-content {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.item-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #27272a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.item-url {
  display: block;
  font-size: 22rpx;
  color: #a1a1aa;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.item-meta {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
  color: #d4d4d8;
}

/* 浮动按钮 - 固定位置 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(99,102,241,0.4);
  z-index: 100;
  transition: transform 0.2s, box-shadow 0.2s;
}

.fab:active {
  transform: scale(0.92);
  box-shadow: 0 6rpx 20rpx rgba(99,102,241,0.3);
}

.fab text {
  font-size: 52rpx;
  color: #fff;
  font-weight: 300;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #a1a1aa;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(99,102,241,0.3);
}

.empty-btn::after {
  border: none;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #a1a1aa;
  font-size: 28rpx;
}
