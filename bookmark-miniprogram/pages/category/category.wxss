/* pages/category/category.wxss */

.category-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 标题栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.header-bar .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 分类列表 */
.category-list {
  margin-top: 16rpx;
}

/* 分类卡片 */
.category-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.15s ease;
}

.category-card-hover {
  background-color: #f9fafb;
}

.category-card:active {
  transform: scale(0.99);
}

.category-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.category-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.category-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.category-count {
  font-size: 24rpx;
  color: #9ca3af;
}

.category-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  padding: 0;
  margin: 0;
  border: none;
  background-color: #f3f4f6;
  border-radius: 12rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s ease;
}

.action-btn:active {
  background-color: #d1d5db;
  transform: scale(0.92);
}

.action-btn::after {
  border: none;
}

.action-btn.danger {
  background-color: #fef2f2;
}

.action-btn.danger:active {
  background-color: #fee2e2;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  animation: modalFadeIn 0.25s ease-out;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 32rpx;
  text-align: center;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #f9fafb;
  box-sizing: border-box;
}

/* 图标选择器 */
.icon-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.icon-option {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #f9fafb;
}

.icon-option.selected {
  border-color: #2563eb;
  background-color: #dbeafe;
}

.modal-btns {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.modal-btns .btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
}

/* 通用样式 */
.btn {
  border: none;
  border-radius: 12rpx;
  font-weight: 600;
}

.btn-primary {
  background-color: #2563eb;
  color: #ffffff;
}

.btn-secondary {
  background-color: #f3f4f6;
  color: #6b7280;
}

.btn-sm {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #9ca3af;
}

.empty-state .icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-state .text {
  font-size: 28rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #9ca3af;
}

.mt-md {
  margin-top: 20rpx;
}
