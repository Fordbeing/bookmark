/* pages/category/category.wxss */

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #fafafa 20%);
}

/* 固定头部 */
.header {
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.add-btn {
  padding: 14rpx 28rpx;
  background: rgba(255,255,255,0.2);
  color: #fff;
  font-size: 26rpx;
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
}

/* 分类列表 - 弹性填充 */
.list {
  flex: 1;
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 滑动容器 */
.swipe-container {
  position: relative;
  overflow: hidden;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
}

.swipe-content {
  position: relative;
  z-index: 1;
  transition: transform 0.15s ease-out;
}

.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
}

.action-edit, .action-delete {
  width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.action-edit {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.action-delete {
  background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
}

/* 分类项 */
.item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.item-arrow {
  font-size: 36rpx;
  color: #d4d4d8;
  margin-left: 8rpx;
}

.item-icon {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(245,158,11,0.25);
}

.item-main {
  flex: 1;
  min-width: 0;
}

.item-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #27272a;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-count {
  font-size: 24rpx;
  color: #a1a1aa;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-box {
  width: 85%;
  max-width: 620rpx;
  background: #fff;
  border-radius: 28rpx;
  padding: 44rpx 36rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
  animation: modalIn 0.25s ease-out;
}

@keyframes modalIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #27272a;
  margin-bottom: 36rpx;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 26rpx;
  color: #71717a;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f4f4f5;
  border: 2rpx solid #e4e4e7;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366f1;
  background: #fff;
}

/* 图标选择 */
.icon-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.icon-opt {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f4f4f5;
  border-radius: 14rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.15s;
}

.icon-opt.sel {
  border-color: #6366f1;
  background: #eef2ff;
  box-shadow: 0 4rpx 12rpx rgba(99,102,241,0.2);
}

/* 弹窗按钮 */
.modal-btns {
  display: flex;
  gap: 20rpx;
  margin-top: 36rpx;
}

.btn-cancel, .btn-save {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 18rpx;
  transition: all 0.15s;
}

.btn-cancel {
  background: #f4f4f5;
  color: #52525b;
}

.btn-save {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(99,102,241,0.3);
}

.btn-cancel:active, .btn-save:active {
  transform: scale(0.98);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #a1a1aa;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(99,102,241,0.3);
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #a1a1aa;
  font-size: 28rpx;
}
