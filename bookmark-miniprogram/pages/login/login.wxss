/* pages/login/login.wxss */

.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 顶部 - 图标和标题同行 */
.header {
  text-align: center;
  padding: 40rpx 0 30rpx;
  color: #fff;
}

.brand {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.logo {
  font-size: 56rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.7;
}

/* Tab 切换 */
.tab-bar {
  display: flex;
  background: rgba(255,255,255,0.15);
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: rgba(255,255,255,0.7);
  border-radius: 14rpx;
  font-weight: 500;
}

.tab-item.active {
  background: #fff;
  color: #6366f1;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

/* 表单容器 - 紧凑型 */
.form-box {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.2);
}

/* 输入框组 */
.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  font-size: 24rpx;
  color: #71717a;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e4e4e7;
  border-radius: 14rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.input:focus {
  border-color: #6366f1;
  background: #fff;
}

/* 记住我 */
.remember-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
  color: #71717a;
}

.remember-row switch {
  transform: scale(0.8);
}

/* 按钮行 */
.btn-row {
  display: flex;
  gap: 16rpx;
}

.btn-login, .btn-wx, .btn-register {
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  padding: 0;
  margin: 0;
}

.btn-login::after, .btn-wx::after, .btn-register::after {
  border: none;
}

.btn-login {
  flex: 1;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  box-shadow: 0 6rpx 18rpx rgba(99,102,241,0.35);
}

.btn-wx {
  width: 180rpx;
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: #fff;
  box-shadow: 0 6rpx 18rpx rgba(34,197,94,0.35);
}

.btn-register {
  width: 100%;
  margin-top: 8rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  box-shadow: 0 6rpx 18rpx rgba(99,102,241,0.35);
}

.btn-login:active, .btn-wx:active, .btn-register:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 底部提示 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  color: rgba(255,255,255,0.7);
  font-size: 26rpx;
}
