/* pages/add/add.wxss */

.add-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.form-container {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 40rpx;
}

/* 输入框组 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.required {
  color: #ef4444;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #f9fafb;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.input-focus {
  border-color: #2563eb;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(37, 99, 235, 0.1);
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #f9fafb;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.textarea-focus {
  border-color: #2563eb;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(37, 99, 235, 0.1);
}

/* 选择器 */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background-color: #f9fafb;
  font-size: 28rpx;
}

.picker .arrow {
  font-size: 32rpx;
  color: #9ca3af;
}

/* 标签 */
.tags-container {
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx;
  background-color: #f9fafb;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #dbeafe;
  color: #2563eb;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag-remove {
  font-size: 24rpx;
  color: #6b7280;
  padding: 4rpx;
}

.tag-input-wrapper {
  margin-top: 8rpx;
}

.tag-input {
  width: 100%;
  padding: 12rpx;
  font-size: 26rpx;
  background: transparent;
}

/* 开关组 */
.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 16rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 按钮组 */
.btn-group {
  margin-top: 40rpx;
}

.btn {
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  transition: all 0.15s ease;
}

.btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-primary {
  background-color: #2563eb;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #1e40af;
}

.btn-primary {
  background-color: #2563eb;
  color: #ffffff;
}

.btn-secondary {
  background-color: #f3f4f6;
  color: #6b7280;
}

.btn-danger {
  background-color: #fef2f2;
  color: #ef4444;
}

.btn-block {
  width: 100%;
}

.mt-md {
  margin-top: 20rpx;
}
