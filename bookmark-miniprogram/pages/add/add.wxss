/* pages/add/add.wxss */

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #fafafa 20%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 头部 */
.header {
  flex-shrink: 0;
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #27272a;
}

/* 表单 - 弹性填充 */
.form {
  flex: 1;
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
}

.field {
  flex-shrink: 0;
  margin-bottom: 16rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #71717a;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.req {
  color: #ef4444;
}

.input {
  width: 100%;
  height: 76rpx;
  padding: 0 20rpx;
  background: #f4f4f5;
  border: 2rpx solid #e4e4e7;
  border-radius: 14rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #6366f1;
  background: #fff;
}

.textarea {
  width: 100%;
  flex: 1;
  min-height: 80rpx;
  padding: 16rpx 20rpx;
  background: #f4f4f5;
  border: 2rpx solid #e4e4e7;
  border-radius: 14rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

/* 分类 + 收藏 一行 */
.row {
  flex-shrink: 0;
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.flex-1 {
  flex: 1;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 76rpx;
  padding: 0 20rpx;
  background: #f4f4f5;
  border: 2rpx solid #e4e4e7;
  border-radius: 14rpx;
  font-size: 28rpx;
}

.arrow {
  font-size: 32rpx;
  color: #a1a1aa;
}

.switch-box {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 12rpx;
}

.switch-box switch {
  transform: scale(0.85);
}

/* 标签 */
.tags-box {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx;
  background: #f4f4f5;
  border: 2rpx solid #e4e4e7;
  border-radius: 14rpx;
  min-height: 76rpx;
  align-items: center;
}

.tag {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, rgba(99,102,241,0.15) 0%, rgba(139,92,246,0.15) 100%);
  color: #6366f1;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-x {
  font-size: 22rpx;
  color: #a1a1aa;
  padding-left: 4rpx;
}

.tag-input {
  flex: 1;
  min-width: 120rpx;
  font-size: 26rpx;
  background: transparent;
}

/* 按钮区 - 固定底部 */
.btns {
  flex-shrink: 0;
  display: flex;
  gap: 16rpx;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.btn-save, .btn-cancel, .btn-delete {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-save {
  flex: 2;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(99,102,241,0.3);
}

.btn-cancel {
  background: #f4f4f5;
  color: #52525b;
}

.btn-delete {
  background: #fef2f2;
  color: #ef4444;
}

.btn-save:active, .btn-cancel:active, .btn-delete:active {
  transform: scale(0.98);
  opacity: 0.9;
}
