/* 全局样式 - 青春活力 · 高端简洁 */

page {
  /* 渐变主色调 - 年轻活力 */
  --primary: #6366f1;           /* 靛蓝紫 */
  --primary-light: #818cf8;
  --primary-dark: #4f46e5;
  --accent: #f472b6;            /* 粉色点缀 */
  --accent-light: #f9a8d4;
  
  /* 成功/警告/危险 */
  --success: #10b981;
  --warning: #f59e0b;
  --danger: #ef4444;
  
  /* 灰度系统 */
  --gray-50: #fafafa;
  --gray-100: #f4f4f5;
  --gray-200: #e4e4e7;
  --gray-300: #d4d4d8;
  --gray-400: #a1a1aa;
  --gray-500: #71717a;
  --gray-600: #52525b;
  --gray-700: #3f3f46;
  --gray-800: #27272a;
  --gray-900: #18181b;
  
  /* 背景 */
  --bg: #f8fafc;
  --bg-card: #ffffff;
  
  /* 全局设置 */
  background: var(--bg);
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: var(--gray-800);
  line-height: 1.5;
}

/* ========== 通用组件 ========== */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: var(--bg);
  padding-bottom: 120rpx;
}

/* 卡片 */
.card {
  background: var(--bg-card);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

/* 主按钮 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  color: #fff;
  font-weight: 500;
  border-radius: 24rpx;
  padding: 20rpx 36rpx;
  font-size: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.3);
}

/* 次要按钮 */
.btn-secondary {
  background: var(--gray-100);
  color: var(--gray-600);
  border-radius: 24rpx;
  padding: 20rpx 36rpx;
  font-size: 28rpx;
}

/* 小按钮 */
.btn-sm {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
}

/* 图标按钮 */
.icon-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--gray-100);
  border-radius: 16rpx;
  font-size: 28rpx;
}

.icon-btn:active {
  background: var(--gray-200);
  transform: scale(0.95);
}

/* 输入框 */
.input {
  width: 100%;
  height: 88rpx;
  padding: 0 28rpx;
  background: var(--gray-50);
  border: 2rpx solid var(--gray-200);
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.2s;
}

.input:focus {
  border-color: var(--primary);
  background: #fff;
}

/* 标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 18rpx;
  background: linear-gradient(135deg, rgba(99,102,241,0.1) 0%, rgba(244,114,182,0.1) 100%);
  color: var(--primary);
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 渐变文字 */
.gradient-text {
  background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ========== 列表项 ========== */

.list-item {
  display: flex;
  align-items: center;
  background: var(--bg-card);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  transition: transform 0.15s, box-shadow 0.15s;
}

.list-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.02);
}

/* ========== 空状态 ========== */

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: var(--gray-400);
  margin-bottom: 32rpx;
}

.empty-btn {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  color: #fff;
  padding: 20rpx 48rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.3);
}

/* ========== 弹窗 ========== */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-box {
  width: 640rpx;
  background: #fff;
  border-radius: 28rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: modalIn 0.25s ease-out;
}

@keyframes modalIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: var(--gray-800);
  margin-bottom: 40rpx;
}

/* ========== 表单 ========== */

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 26rpx;
  color: var(--gray-500);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: var(--gray-50);
  border: 2rpx solid var(--gray-200);
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* ========== 加载状态 ========== */

.loading {
  text-align: center;
  padding: 60rpx;
  color: var(--gray-400);
  font-size: 28rpx;
}

/* ========== 工具类 ========== */

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-center { text-align: center; }
.text-sm { font-size: 24rpx; }
.text-lg { font-size: 32rpx; }
.text-muted { color: var(--gray-400); }
.font-bold { font-weight: 600; }

.flex { display: flex; }
.flex-1 { flex: 1; }
.items-center { align-items: center; }
.justify-between { justify-content: space-between; }
.gap-sm { gap: 12rpx; }
.gap-md { gap: 20rpx; }

.mt-md { margin-top: 24rpx; }
.mb-md { margin-bottom: 24rpx; }

/* ========== 底部安全区 ========== */

.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
